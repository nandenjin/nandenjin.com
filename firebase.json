{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/ja",
        "destination": "/",
        "type": 301
      },
      {
        "source": "/ja/:path*",
        "destination": "/:path*",
        "type": 301
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/404.html"
      }
    ],
    "trailingSlash": false
  }
}
